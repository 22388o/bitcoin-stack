#!/usr/bin/env bash

source .env

bin/e-cli sendtoaddress $(bin/ld-dave newaddr p2sh-segwit | jq '.address' | tr -d '"') 1
bin/e-cli generate 5
sleep 5
LIGHTNINGDEMMA_PUBKEY=$(bin/ld-emma getinfo | jq '.id' | tr -d '"')
bin/ld-dave connect $LIGHTNINGDEMMA_PUBKEY@$LIGHTNINGDEMMA_HOST:$LIGHTNINGDEMMA_PORT
bin/ld-dave fundchannel $LIGHTNINGDEMMA_PUBKEY 10000000
bin/e-cli generate 5